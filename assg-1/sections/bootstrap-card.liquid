<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{ section.settings.card_image | image_url: width: 500 }}" alt="{{section.settings.card_image.alt}}">
  <div class="card-body">
    <h5 class="card-title">{{section.settings.custom_text_title}}</h5>
    <p class="card-text">{{section.settings.custom_text_body}}</p>
    <a href="{{section.settings.button_link}}" class="btn btn-primary">{{section.settings.custom_btn_text}}</a>
  </div>
</div>
<style>
  .card .btn {
    background-color : {{ section.settings.btn-color}}
  }
</style>  
{% schema %}
{
    "name": "Bootstrap Card",
    "tag": "section",
    "settings": [{
            "id": "custom_text_title",
            "type": "text",
            "label": "Card Title",
            "default": "Card Title"
        },

		{
            "id": "custom_text_body",
            "type": "richtext",
            "label": "Card Text",
            "default": "<p>Add your text here</p>"
        },

		{
            "id": "custom_btn_text",
            "type": "text",
            "label": "Button Text",
            "default": "Add your text here"
        },

        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },

		{
          "type": "url",
          "id": "button_link",
          "label": "Button link"
		},

        {
            "type": "color",
            "id": "btn-color",
            "label": "Button Color",
            "default": "#3b4d28"
        }
    ],
    "presets": [{
        "name": "Bootstrap Card",
        "category": "Custom"
    }]
}
{% endschema %}

